<% if flash[:email] %>
<div class="alert alert-success"><%= flash[:email] %></div>
<% end %>
<% if flash[:success] %>
<div class="alert alert-success"><%= flash[:success] %></div>
<% end %>

<%= render 'layouts/messages' %>
<div class="container-fluid">
  <form id="new_user" action="/users/sign_in" accept-charset="UTF-8" method="post">
    <div>
      <input name="utf8" type="hidden" value="âœ“">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="login-card card">
        <form name="loginForm">
          <div class="header">
            <h1 class="text-center">Login</h1>
          </div>
          <div class="form-group">
            <input type="email" ng-model="user.email" class="inputBox" placeholder="Email" name="user[email]" id="user_email" required>
          </div>
          <div class="form-group">
            <input type="password" ng-model="user.password" class="inputBox" placeholder="Password" name="user[password]" id="user_password" required>
          </div>
          <div class="forgot-password">
            <a href="/users/password/new">Forgot Password?</a>
          </div>

          <div class="text-center login-actions">
            <button type="submit" class="btn submitBtn" name="commit" data-disable-with="Log in">Login</button>
            <input type="button" class="btn submitBtn" onclick="location.href='/users/sign_up'" value="Sign Up" />
          </div>
        </form>
      </div>
    </div>
  </form>
</div>

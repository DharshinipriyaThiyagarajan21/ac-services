<div ng-controller="serviceController">
	<div class="container main-content">
		<div class="tabs-section">
			<h3 class="text-center">Service Request</h3>
			<div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Problem :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.problem" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>AC type :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.ac_type" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>No. of AC :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.count" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Brand :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.brand" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Service needed on :</label>
					</div>
					<div class="col-sm-6">
						<input type="date" ng-model="service.requested_date" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Name :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.cust_name" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Address :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.address" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>City :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.cust_city" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>State :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.cust_state" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Country :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.cust_country" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Email :</label>
					</div>
					<div class="col-sm-6">
						<input type="email" ng-model="service.cust_email" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="row form-group">
					<div class="col-sm-3 text-right">
						<label>Mobile Number :</label>
					</div>
					<div class="col-sm-6">
						<input type="text" ng-model="service.cust_mobile" class="form-control">
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="text-center">
					<button class="btn submitBtn" ng-click="saveService()">Save</button>
					<a class="btn submitBtn" href="/home">back</a>
				</div>
			</div>
		</div>
	</div>
</div>